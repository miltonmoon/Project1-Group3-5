@{
    ViewData["Title"] = "Tour Form";
}
@model Project1_Group3_5.Models.Booking

<div class="text-center" style="font-family:Garamond;" asp-validation-summary="All">
    <form method="post" asp-action="TourForm">
        <fieldset style="text-align: left">
            <legend>Enter Group Information</legend>
            <p><label asp-for="GroupName">Name of Group:</label><input type="text" id="groupname" asp-for="GroupName" value="" />
            <p><label asp-for="GroupSize">Size of Group:</label><input type="number" id="groupsize" asp-for="GroupSize" value="" /></p>
            <p><label asp-for="GroupEmail">Email Address:</label><input type="text" id="groupemail" asp-for="GroupEmail" value="" /></p>
            <p><label asp-for="GroupPhone">Phone Number (optional):</label><input type="text" id="groupphone" asp-for="GroupPhone" value="" /></p>
        </fieldset>

        <button type="submit" class="btn btn-success">
            Submit
        </button>

    </form>
</div>